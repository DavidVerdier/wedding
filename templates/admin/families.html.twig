{% extends 'admin/base.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Les familles</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a href="{{ path('add_family') }}" class="btn btn-sm btn-outline-secondary">Ajouter</a>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Code postale</th>
                <th>Ville</th>
                <th>personnes</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for u in users %}
            <tr>
                <td>{{ u.username }}</td>
                <td>{{ u.email }}</td>
                <td>{{ u.zipCode }}</td>
                <td>{{ u.city }}</td>
                <td>{{ u.persons|length }}</td>
                <td>
                    <a href="{{ path('edit_family', {id: u.id}) }}" class="btn btn-outline-primary">Editer</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
